<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.aiton.yc.client"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_login" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:text="机构名称："
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/normalTextSize" />

                <EditText
                    android:paddingLeft="15dp"
                    android:id="@+id/edit_jigouhao"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/edit_shape_login"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="请输入机构名称"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/normalEditTextSize" >

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:text="机构密码："
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/normalTextSize" />

                <EditText
                    android:paddingLeft="15dp"
                    android:id="@+id/edit_jigoumima"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/edit_shape_login"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="请输入机构密码"
                    android:password="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/normalEditTextSize" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:text="派单员手机号："
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/normalTextSize" />

                <EditText
                    android:paddingLeft="15dp"
                    android:id="@+id/edit_paidanyuan"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/edit_shape_login"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="请输入派单员手机号"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/normalEditTextSize" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dp"
                        android:text="记住密码"
                        android:textColor="@color/aiton_basic_color"
                        android:textSize="@dimen/normalTextSize" />

                    <passenger.view.customview.AnimCheckBox
                        android:id="@+id/ck_remember_account"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/textView3"
                        app:circle_color="#00ffffff"
                        app:stroke_color="@color/aiton_basic_color"
                        app:stroke_width="1dp" />
                </RelativeLayout>

                <Button
                    android:id="@+id/button_login"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/dachezuche_button_selector_small"
                    android:text="登录"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>