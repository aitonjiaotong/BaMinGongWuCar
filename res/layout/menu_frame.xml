                        android:textColor="@color/red"
                        android:textSize="16sp" />
                </LinearLayout>
                -->
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <View
        android:id="@+id/right_space"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>